{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Clock Widget Settings",
  "type": "object",
  "properties": {
    "use_24h_format": {
      "type": "boolean",
      "title": "24-Hour Format",
      "description": "Use 24-hour time format instead of 12-hour",
      "default": false
    },
    "show_seconds": {
      "type": "boolean",
      "title": "Show Seconds",
      "description": "Display seconds in the time",
      "default": true
    },
    "show_date": {
      "type": "boolean",
      "title": "Show Date",
      "description": "Display the date below the time",
      "default": true
    },
    "background_color": {
      "type": "string",
      "title": "Background Color",
      "description": "Background color (hex code)",
      "default": "#2196F3"
    },
    "text_color": {
      "type": "string",
      "title": "Text Color",
      "description": "Text color (hex code)",
      "default": "#FFFFFF"
    },
    "font_size": {
      "type": "integer",
      "title": "Font Size",
      "description": "Font size for the time display",
      "minimum": 16,
      "maximum": 72,
      "default": 32
    }
  },
  "required": []
}